<h1>Edit the details for <%= @stylist.name() %></h1>
<div id="name_change">
  <h3>Name Change</h3>
  <form action="/stylists/<%= @stylist.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="name_change">Enter the change of name for <%= @stylist.name() %></label>
    <br>
    <input type="text" name="name_change">
    <br>
    <br>
    <button type="submit" name="update" class="btn btn-success">update</button>
  </form>

</div>

<div id="delete_change">
  <h3>Delete</h3>
  <form action="/stylist/<%= @stylist.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <label for="name_change">Click the big red button to delete <%= @stylist.name() %></label>
    <br>
    <button type="submit" name="delete" class="btn btn-danger btn-lg">Delete</button>
  </form>

</div>
